{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "import"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "mocha": true,
    "jest": true
  },
  "globals": {
    "Materialize": true,
    "React": true,
    "window": true,
    "$": true,
    "document": true,
    "localStorage": true,
    "componentDidMount": true,
    "describe": true,
    "expect": true
  },
  "rules": {
    "max-len": [1, 80, 2],
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "import/no-named-as-default": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error",
    "react/no-did-update-set-state": [0, 0],
    "react/forbid-prop-types": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "react/destructuring-assignment": 0,
    "jsx-a11y/alt-text": 0,
    "jsx-a11y/anchor-has-content": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "react/require-default-props": 0,
    "no-shadow": 0,
    "import/no-unresolved": [2, { "commonjs": true , "amd": true}],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "arrow-body-style": 2,
    "prefer-const": "warn",
    "no-trailing-spaces": "warn",
    "class-methods-use-this": 0,
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": false,
        "requireReturnDescription": true
      }
    ],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": true,
          "MethodDefinition": true,
          "ClassDeclaration": true
        }
      }
    ],
    "indent": [
      "error",
      2
    ],
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".jsx",".png"]
      }
    }
  }
}
