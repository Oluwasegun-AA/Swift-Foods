<% layout('layout/page') -%>
<% block('title', 'Login') -%>
<% block('brand', 'ExpressJS') -%>

<p>This form will sign you up as a new user if there is no existing user.</p>

<div class="col-md-8 col-md-offset-2">
    <form name="login-form">
        <div class="form-group">
            <label for="input-username">Name: </label>
            <input name="username" id="input-username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="input-pwd">Password: </label>
            <input name="pwd" id="input-pwd" type="password" class="form-control">
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Submit</button>
            <span class="help-block error"></span>
        </div>
    </form>
</div>

<script src="/static/js/login.js"></script>