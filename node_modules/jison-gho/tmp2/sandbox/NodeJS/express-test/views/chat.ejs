<% layout('layout/page') -%>
<% block('title', 'Chat') -%>
<% block('brand', 'ExpressJS') -%>

<div class="chat__messages">
    <ul class="list-group">
        <li class="list-group-item" style="color: green;">Welcome to the chat demo application!</li>
    </ul>
</div>

<div>
    <form class="form-horizontal chat__form">
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 col-md-1"><label for="chat__message" class="control-label">Message</label></div>
            <div class="col-xs-8 col-sm-9 col-md-10"><input type="text" id="chat__message" name="message" autofocus class="form-control"
                   placeholder="Enter your message here..." autocomplete="off"></div>
            <div class="col-xs-1 col-sm-1 col-md-1"><button class="btn btn-primary" type="submit">Send</button></div>
        </div>
    </form>
</div>
<p></p>
<div><b>Connection status:</b> <span class="chat__status"></span></div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/1.7.2/socket.io.min.js"></script>
<script src="/static/js/chat.js"></script>